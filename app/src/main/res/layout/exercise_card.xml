<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F9F9F9"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <!-- Заголовок с названием упражнения и кнопкой удалить -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvExerciseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Упражнение"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/btnRemoveExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✕"
            android:textSize="18sp"
            android:textColor="#FF0000"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Параметры упражнения: подходы, повторения, вес, отдых -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <!-- Подходы -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Подходы"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvSets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Повторения -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Повторения"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvReps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Вес -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вес"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 кг"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Отдых -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отдых"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvRest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90 сек"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
