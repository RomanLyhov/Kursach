<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mealCardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:layout_margin="8dp"
    android:padding="16dp">

    <!-- Заголовок с названием и стрелочкой -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/arrowIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="▶"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvMealName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Завтрак"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tvMealCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 ккал"
            android:textSize="16sp"
            android:textColor="#4CAF50" />
    </LinearLayout>

    <!-- Описание -->
    <TextView
        android:id="@+id/tvMealDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Нет продуктов"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"
        android:layout_marginStart="32dp" />

    <!-- Контейнер для продуктов (скрыт по умолчанию) -->
    <LinearLayout
        android:id="@+id/productsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:visibility="gone" />

    <!-- Кнопка добавления продукта -->
    <Button
        android:id="@+id/btnAddMealItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Добавить продукт"
        android:layout_marginTop="12dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF" />

</LinearLayout>